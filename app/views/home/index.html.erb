<div class="container">
  <div class="p-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Enter a URL To Shorten</h5>
        <%= form_for @link, remote: true do |form| %>
          <%= form.text_field :origin_url, class: "form-control", placeholder: 'Enter URL...' %>
          <%= form.submit class: 'btn btn-primary mt-2' %>
        <% end %>
        <div id='short-link'></div>
      </div>
    </div>
  </div>
</div>
